@model Contexto_de_datos.Models.Usuario;
@{
    var Email = "";
    if (!string.IsNullOrEmpty((string)ViewData["email"]))
    {
        Email = (string)ViewData["email"];
    }
    ViewData["Title"] = "Ingresar";

    var Url = "/Pedido";
    if (!string.IsNullOrEmpty((string)TempData["url"]))
    {
        Url = (string)TempData["url"];
    }
}
<h3 class="text-center mb-2">Iniciar sesión</h3>
<div class="row d-flex justify-content-center">
    <div class="col col-md-6">
        <form asp-action="Ingresar">
            @if (!string.IsNullOrEmpty((string)ViewData["error"]))
            {<div class="row">
                    <label class="text-danger">@ViewData["error"]</label>
                </div>
            }
            <div class="row form-group">
                <div class="col">
                    <label asp-for="Email" class="control-label"></label>
                    <input name="Email" class="form-control" value="@Email" />
                </div>
            </div>
            <div class="row form-group">

                <div class="col">
                    <label asp-for="Password" class="control-label"></label>
                    <input name="Password" class="form-control" />
                </div>
            </div>
            <input name="Url" type="hidden" value="@Url"/>
            <div class="form-group row">
                <div class="col d-flex justify-content-end">
                    <input type="submit" value="Ingresar" class="btn btn-primary" name="submit" />
                </div>
            </div>
        </form>
    </div>
</div>
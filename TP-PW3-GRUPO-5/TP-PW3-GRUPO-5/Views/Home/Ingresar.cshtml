@model Contexto_de_datos.Models.Usuario;
@{
    var Email = "";
    if (!string.IsNullOrEmpty((string)ViewData["email"]))
    {
        Email = (string)ViewData["email"];
    }
    ViewData["Title"] = "Ingresar";
}
<h3 class="text-center mb-2">Ingresar</h3>

<div class="row d-flex justify-content-center">
    <div class="col-md-8">
        <form asp-action="Ingresar">
            @if (!string.IsNullOrEmpty((string)ViewData["error"]))
            {<div class="row">
                    <label class="text-danger">@ViewData["error"]</label>
                </div>
            }
            <div class="row form-group">
                <div class="col-md-6">
                    <label asp-for="Email" class="control-label"></label>
                    <input name="Email" class="form-control" value="@Email" />
                </div>
            </div>
            <div class="row form-group">

                <div class="col-md-6">
                    <label asp-for="Password" class="control-label"></label>
                    <input name="Password" class="form-control" />
                </div>
            </div>
            <div class="form-group d-flex justify-content-center row">
                <div class="col-md-4">
                    <input type="submit" value="Ingresar" class="btn btn-primary" name="submit" />
                </div>
            </div>
        </form>
    </div>
</div>
@model List<Contexto_de_datos.Models.Usuario>
@section Scripts{
    <script src="~/js/usuario.js"></script>
}
<div class="filter-containet mb-5">
    <h3>Filtros</h3>
    <div class="d-flex justify-content-end">
        <a class="btn btn-primary" href="Usuario/nuevoUsuario">Nuevo Usuario</a>
    </div>
    <div class="filtro-container d-flex justify-content-between align-items-center row">
        <div class="col-12 col-md-4">
            <select class="select2Usuario col-12" id="nombre" onchange="ObtenerResultados()">
                <option value="">Nombre</option>
                @foreach (Contexto_de_datos.Models.Usuario usuario in Model)
                {
                    <option value="@usuario.Nombre">@usuario.Nombre</option>
                }
            </select>
        </div>

        <div class="col-12 col-md-4">
            <select class="select2Usuario col-12" id="email" onchange="ObtenerResultados()">
                <option value="">Email</option>
                @foreach (Contexto_de_datos.Models.Usuario usuario in Model)
                {
                    <option value="@usuario.Email">@usuario.Email</option>
                }
            </select>
        </div>

        <div class="col-12 col-md-3 form-check">
            <label class="col-8 form-check-label" for="eliminado">Excluir Eliminados</label>
            <input class="form-check-input" type="checkbox" name="eliminado" id="eliminado" checked="true" onclick="ObtenerResultados()" />
        </div>
    </div>
</div>

<div class="table-container">
    <table class="table table-hover" id="example">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Email</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody id="tbody">
        </tbody>
    </table>
</div>




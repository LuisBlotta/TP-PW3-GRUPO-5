@model List<Entidades.Usuario>
@section Scripts{
    <script src="~/js/usuario.js"></script>
}

<main class="main crear-usuario-container">
    <div class="container">
        <div class="filter-containet mb-5">
            <h3>Filtros</h3>
            <div class="filtro-container d-flex justify-content-between align-items-center row">
                <div class="col-12 col-md-4">
                    <select class="js-example-basic-single col-12" id="nombre" onchange="obtenerResultados()">
                        @foreach (Entidades.Usuario usuario in Model)
                        {
                            <option value="@usuario.Nombre">@usuario.Nombre</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-4">
                    <select class="js-example-basic-single col-12" id="email" onchange="obtenerResultados()">
                        <option value="">Email</option>
                        @foreach (Entidades.Usuario usuario in Model)
                        {
                            <option value="@usuario.Email">@usuario.Email</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-3 form-check">
                    <label class="col-8 form-check-label" for="eliminado">Excluir Eliminados</label>
                    <input class="form-check-input" type="checkbox" name="eliminado" id="eliminado" checked="true" onclick="obtenerResultados()" />
                </div>
            </div>
        </div>

        <div class="table-container">
            <table class="table table-hover" id="example">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Email</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    @foreach (Entidades.Usuario usuario in Model)
                    {
                    <tr>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Apellido</td>
                        <td>@usuario.Email</td>
                        <td>
                            <a class="me-3" href="/usuario/detalleUsuario?accion=ver" data-toggle="tooltip"
                               title="Ver"><i class="fas fa-eye"></i></a>
                            <a class="me-3" hef="/usuario/detalleUsuario?accion=editar" data-toggle="tooltip"
                               title="Editar"><i class="fas fa-edit"></i></a>
                            <a href="#" data-toggle="tooltip" title="Borrar">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</main>





@model List<ViewModels.PedidoCliente>
@{
    ViewModels.ClientesEstadoPedido clientesEstadoPedido = (ViewModels.ClientesEstadoPedido)ViewData["selectFiltrado"];
}
@section Scripts{
    <script src="~/bundles/pedido.min.js"></script>
}

<div class="filtro-container mb-5">
    <div class="row mb-5">
        <div class="col md-6 d-flex justify-content-start">
            <h3>Filtros</h3>
        </div>
        <div class="col md-6 d-flex justify-content-end">
            <a class="btn btn-primary justify-content-end" href="/Pedido/NuevoPedido">Nuevo Pedido</a>
        </div>
    </div>
    <div class="d-flex justify-content-between align-items-center row">
        <div class="col-md-4">
            <select class="select2Pedido col-12" id="cliente" onchange="ObtenerResultados()">
                <option value="">Cliente</option>
                @foreach (string cliente in clientesEstadoPedido.Clientes)
                {
                    <option value="@cliente">@cliente</option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <select class="select2Pedido col-12" id="estado" onchange="ObtenerResultados()">
                <option value="">Estado</option>
                @foreach (string estado in clientesEstadoPedido.EstadosPedidos)
                {
                    <option value="@estado">@estado</option>
                }
            </select>
        </div>

        <div class="col-md-2 form-check">
            <label class="form-check-label" for="ultimosDosMeses">Solo últimos 2 meses</label>
            <input class="form-check-input" type="checkbox" name="ultimosDosMeses" id="ultimosDosMeses" checked="true" onclick="ObtenerResultados()" />
        </div>

        <div class="col-md-2 form-check">
            <label class="form-check-label" for="eliminado">Excluir Eliminados</label>
            <input class="form-check-input" type="checkbox" name="eliminado" id="eliminado" checked="true" onclick="ObtenerResultados()" />
        </div>
    </div>
</div>

<div class="table-container">
    <table class="table table-hover" id="example">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Pedido</th>
                <th scope="col">Estado</th>
                <th scope="col">Ult modificación</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody id="tbody">
        </tbody>
    </table>
</div>






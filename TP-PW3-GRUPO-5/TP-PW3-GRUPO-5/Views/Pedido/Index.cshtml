@model List<ViewModels.PedidoCliente>
@{ 
    ViewModels.ClientesEstadoPedido clientesEstadoPedido = (ViewModels.ClientesEstadoPedido) ViewData["selectFiltrado"];
}
@section Scripts{
    <script src="~/js/pedido.js"></script>
}

<main class="main crear-usuario-container">
    <div class="container">
        <div class="filter-containet mb-5">
            <h3>Filtros</h3>
            <div class="d-flex justify-content-end">
                <a class="btn btn-primary" href="/Pedido/nuevoPedido">Nuevo Pedido</a>
            </div>
            <div class="filtro-container d-flex justify-content-between align-items-center row">
                <div class="col-12 col-md-4">
                    <select class="js-example-basic-single col-12" id="cliente" onchange="ObtenerResultados()">
                        <option value="">Cliente</option>
                        @foreach (string cliente in clientesEstadoPedido.Clientes)
                        {
                            <option value="@cliente">@cliente</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-4">
                    <select class="js-example-basic-single col-12" id="estado" onchange="ObtenerResultados()">
                        <option value="">Estado</option>
                        @foreach (string estado  in clientesEstadoPedido.EstadosPedidos)
                        {
                            <option value="@estado">@estado</option>
                        }
                    </select>
                </div>

                <div class="col-12 col-md-3 form-check">
                    <label class="col-8 form-check-label" for="ultimosDosMeses">Solo últimos 2 meses</label>
                    <input class="form-check-input" type="checkbox" name="ultimosDosMeses" id="ultimosDosMeses" checked="true" onclick="ObtenerResultados()" />
                </div>

                <div class="col-12 col-md-3 form-check">
                    <label class="col-8 form-check-label" for="eliminado">Excluir Eliminados</label>
                    <input class="form-check-input" type="checkbox" name="eliminado" id="eliminado" checked="true" onclick="ObtenerResultados()" />
                </div>
            </div>
        </div>

        <div class="table-container">
            <table class="table table-hover" id="example">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Pedido</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Ult modificación</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody id="tbody">
                </tbody>
            </table>
        </div>
    </div>
</main>





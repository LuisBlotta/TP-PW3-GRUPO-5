@model ViewModels.ClientesArticulos
@{
    ViewData["Title"] = "Nuevo Pedido";
}
@section Scripts{
    <script src="~/js/nuevoPedido.js"></script>
}
<h3 class="text-center mb-2">Crear nuevo Pedido</h3>

<div class="row d-flex justify-content-center">
    <div class="col-md-8">
        <form asp-action="NuevoPedido">
            <div class="row form-group">
                <div class="col-md-4 d-flex justify-content-start">
                    <select class="js-example-basic-single col-12" id="cliente" name="cliente">
                        <option value="">Cliente</option>
                        @foreach (Entidades.Cliente c in Model.Clientes)
                        {
                            <option value="@c.Numero">@c.Nombre #@c.Numero</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-md-4">
                    <select class="js-example-basic-single col-12" id="articulo" name="articulo">
                        <option value="">Articulo</option>
                        @foreach (Entidades.Articulo a in Model.Articulos)
                        {
                            <option value="@a.Codigo">@a.Descripcion #@a.Codigo</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <input type="number" class="form-control" name="cantidad" id="cantidad" placeholder="Cantidad" />
                </div>
                <div class="col-md-4">
                    <input type="button" class="btn btn-primary" name="agregar" id="agregar" value="Agregar" onclick="AgregarArticulo()" />
                </div>
            </div>
            <div class="row d-flex justify-content-center">
                <p class="text-danger" id="errorSelect"></p>
            </div>
            <div class="row">
                <div class="table-container">
                    <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Codigo</th>
                                <th scope="col">Cantidad</th>
                                <th scope="col">Quitar</th>
                            </tr>
                        </thead>
                        <tbody id="tbody">
                            
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="form-group d-flex justify-content-center row">
                <div class="col-md-4">
                    <input type="submit" value="Guardar" class="btn btn-primary" name="submit" />
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Guardar y crear otro" class="btn btn-primary" name="submit" />
                </div>
                <div class="col-md-4">
                    <a class="btn btn-primary" href="/Pedido/Index">Cancelar</a>
                </div>
            </div>
        </form>
    </div>

</div>
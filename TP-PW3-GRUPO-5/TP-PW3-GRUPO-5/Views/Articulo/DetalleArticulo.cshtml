@model Entidades.Articulo
@if (ViewData["accion"].ToString() == "ver")
{
    ViewData["Title"] = "Ver Articulo";
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script src="~/js/deshabilitarInputs.js"></script>
    }
    <h3 class="text-center">Ver artículo @Model.Descripcion (Cod: @Model.Codigo)</h3>
    }
else
{
    ViewData["Title"] = "Editar Artículo";
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
<h3 class="text-center mb-2">Editar artículo @Model.Descripcion (Cod: @Model.Codigo)</h3>
}

<div class="row d-flex justify-content-center">
    <div class="col-md-8">
        <form asp-action="EditarArticulo" id="myForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row form-group">
                <div class="col-md-6">
                    <input asp-for="IdArticulo" hidden value="@Model.IdArticulo" />
                    <label asp-for="Codigo" class="control-label"></label>
                    <input asp-for="Codigo" class="form-control" value="@Model.Codigo" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" value="@Model.Descripcion" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex justify-content-end">
                <input type="submit" value="Editar" class="btn btn-primary" id="btnEditar" />
            </div>
            <div class="form-group d-flex justify-content-start">
                <a class="btn btn-primary" href="/Articulo/Index">Volver</a>
            </div>
        </form>
    </div>

</div>




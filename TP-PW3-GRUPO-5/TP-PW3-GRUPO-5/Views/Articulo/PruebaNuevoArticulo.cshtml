@model IEnumerable<TP_PW3_GRUPO_5.Models.Articulo>

@{
    ViewData["Title"] = "PruebaNuevoArticulo";
}

<h1>PruebaNuevoArticulo</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>

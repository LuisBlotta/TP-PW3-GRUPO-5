<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/select2/select2.min.css" />
    <link rel="stylesheet" href="~/css/paginacion/jquery.dataTables.min.css" />
    <link href="~/css/boostrap/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/bundles/site.min.css" />
    <link rel="icon" type="image/x-icon" href="https://i.postimg.cc/s2pj7L19/box.png">
    <link type="text/css" rel="stylesheet" href="~/bundles/styleError.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light nav-container mb-5">
            <div class="container">
                <nav class="navbar navbar-light bg-light">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="/Home">
                            <img src="https://i.postimg.cc/s2pj7L19/box.png"
                                 alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                            Gestor de Pedidos
                        </a>
                    </div>
                </nav>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" href="/Pedido">Pedidos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Articulo">Artículos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Cliente">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Usuario">Usuarios</a>
                        </li>
                    </ul>
                    @{
                        if (TempData.Peek("nombre") != null)
                        {
                            var nombreUsuario = TempData.Peek("nombre").ToString();
                            if (!string.IsNullOrEmpty(nombreUsuario))
                            {
                                var Nombre = "Hola, " + nombreUsuario;
                                <form class="d-flex align-items-center" asp-action="Salir" asp-controller="Home" method="post">
                                    <p class="mb-0 me-3">@Nombre</p>
                                    <button class="btn btn-dark" type="submit">Salir</button>
                                </form>
                            }
                        }
                        else
                        {
                            <form class="d-flex align-items-center">
                                <a href="/Home/Ingresar" class="btn btn-dark">Ingresar</a>
                            </form>
                        }
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pt-3 pb-5">
            @RenderBody()
        </main>
    </div>

    <partial name="pv_Footer" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/select2/select2.js"></script>
    <script src="~/js/paginacion/jquery.dataTables.min.js"></script>
    <script src="~/bundles/footer.min.js"></script>
    <script src="https://kit.fontawesome.com/81ce8a99d9.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
